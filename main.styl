@import 'nib'
@import 'typographic'

global-reset()

blackBg = #1d1d1b
textColor = #ffffff

typographic()
t-headers($helvetica)

html, body
  size 100% 100vh
html, body, .flip-container
  background blackBg
  color textColor
  font-family $helvetica

h1
  color textColor

.flip-container
  absolute top 50% left 50%
  display block
  size 800px 70px
  transform translate3d(-50%, -50%, 0)

  .flip-clock-divider .flip-clock-label
    font-family $helvetica
    font-weight 100
    font-size 1em
    text-transform lowercase
    bottom 0
    color white

  .flip-clock-dot
    background white
